{% extends "layout.njk" %}
{% block head %}{% endblock %}

{% block content %}
    <div class="card">
        <section class="image" style="background:url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <form id="form-edit" method="POST" action="/students?_method=PUT">
                <h2>Editando Aluno(a)</h2>

                {% include 'students/fields.njk'%}
                <input type="hidden" name="id" value="{{student.id}}">
            </form>
            <form id="form-delete" class="form-delete" action="/students?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{student.id}}">
            </form>
            <div class="divButtons">
                <button type="submit" form="form-edit">Salvar</button>
                <button type="submit" form="form-delete">Deletar</button>
            </div>
        </section>
    </div>

    {% include '../formDelete.njk' %}
{% endblock %}